pipeline {
  agent {
    kubernetes {
      defaultContainer 'kaniko'
      yaml """
apiVersion: v1
kind: Pod
spec:
  containers:
  - name: kaniko
    image: gcr.io/kaniko-project/executor:debug
    command:
    - sleep
    args:
    - "3600"
    volumeMounts:
    - name: harbor-creds
      mountPath: /kaniko/.docker
    - name: workspace-volume
      mountPath: /home/jenkins/agent
  - name: jnlp
    image: jenkins/inbound-agent:latest
  volumes:
  - name: harbor-creds
    secret:
      secretName: harbor-creds
      items:
      - key: .dockerconfigjson
        path: config.json
  - name: workspace-volume
    emptyDir: {}
"""
    }
  }

  environment {
    IMAGE_NAME = "harbor.locall:30004/jentest/nginx"
    IMAGE_TAG = "${BUILD_NUMBER}"
    FULL_IMAGE = "${IMAGE_NAME}:${IMAGE_TAG}"
  }

  stages {
    stage('Checkout Source') {
      steps {
        git credentialsId: 'github-token', url: 'https://github.com/hwseo0406/hwseo_site.git', branch: 'main'
      }
    }

    stage('Check Kaniko Config') {
      steps {
        container('kaniko') {
          sh 'cat /kaniko/.docker/config.json || echo "❌ config.json not found"'
        }
      }
    }

    stage('Build & Push Image') {
      steps {
        container('kaniko') {
          sh """
            /kaniko/executor \
              --context `pwd` \
              --dockerfile `pwd`/Dockerfile \
              --destination=${FULL_IMAGE} \
              --insecure \
              --skip-tls-verify
          """
        }
      }
    }

    stage('Update Deployment Manifest') {
      steps {
        sh """
        sed -i 's|image: .*|image: ${FULL_IMAGE}|' ./jentest/jentest-deployment.yaml
        cat ./jentest/jentest-deployment.yaml
        """
      }
    }

    stage('Push Updated Manifest') {
      steps {
        withCredentials([usernamePassword(credentialsId: 'github-token', usernameVariable: 'GIT_USER', passwordVariable: 'GIT_TOKEN')]) {
          sh """
          git config user.name "jenkins"
          git config user.email "jenkins@example.com"
          git remote set-url origin https://${GIT_USER}:${GIT_TOKEN}@github.com/hwseo0406/hwseo_site.git
          git add ./jentest/jentest-deployment.yaml
          git commit -m "Update image to ${FULL_IMAGE} [skip ci]" || echo "No changes to commit"
          git push origin main
          """
        }
      }
    }
  }

  post {
    success {
      echo "✅ 이미지 푸시 및 매니페스트 업데이트 성공 (GitOps 방식)"
    }
    failure {
      echo "❌ 실패! 로그 확인 필요"
    }
  }
}
